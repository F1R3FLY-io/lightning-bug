{
  "name": "@f1r3fly-io/lightning-bug",
  "version": "0.4.1",
  "description": "A modern, extensible text editor built with ClojureScript and CodeMirror 6.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/f1r3fly-io/lightning-bug.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.2",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@f1r3fly-io/lightning-bug": "^0.1.3",
    "@f1r3fly-io/tree-sitter-rholang-js-with-comments": "^1.1.3",
    "bootstrap": "^5.3.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rxjs": "^7.8.2",
    "web-tree-sitter": "0.25.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cljs-test": "^0.1.0",
    "shadow-cljs": "3.1.7",
    "tsd": "^0.31.2"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "test:types": "tsd",
    "build:demo": "node scripts/build-demo.js",
    "test": "npx shadow-cljs watch test",
    "test:headless": "npx shadow-cljs compile karma-test && KARMA_FILE=target/karma-test.js npx karma start --single-run",
    "test:headless-advanced": "npx shadow-cljs compile karma-test-advanced && KARMA_FILE=target/karma-test-advanced.js npx karma start --single-run"
  },
  "main": "dist/libs/lib.core.js",
  "module": "dist/libs/lib.core.js",
  "types": "types/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/libs/lib.core.js",
      "types": "./types/lib.d.ts"
    },
    "./extensions": {
      "import": "./dist/libs/ext.lang.rholang.js",
      "types": "./types/ext.d.ts"
    }
  },
  "files": [
    "dist/**",
    "types/**",
    "resources/public/extensions/**",
    "scripts/postinstall.js"
  ]
}
