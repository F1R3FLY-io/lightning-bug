{
  "name": "@f1r3fly-io/lightning-bug",
  "version": "0.6.6",
  "type": "module",
  "description": "A modern, extensible text editor built with ClojureScript and CodeMirror 6.",
  "author": "Dylon Edwards dylon@vinarytree.io",
  "homepage": "https://f1r3fly.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/f1r3fly-io/lightning-bug.git"
  },
  "bugs": {
    "url": "https://github.com/f1r3fly-io/lightning-bug/issues"
  },
  "keywords": [
    "editor",
    "codemirror",
    "clojurescript",
    "rholang",
    "lsp",
    "tree-sitter",
    "text-editor",
    "syntax-highlighting"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.7",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.2",
    "@f1r3fly-io/tree-sitter-rholang-js-with-comments": "1.1.9",
    "bootstrap": "^5.3.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rxjs": "^7.8.2",
    "web-tree-sitter": "0.25.9"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cljs-test": "^0.1.0",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "^0.0.36",
    "puppeteer-core": "^24.19.0",
    "shadow-cljs": "3.2.0",
    "tsd": "^0.33.0"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "build:debug": "npx shadow-cljs compile libs",
    "build:release": "npx shadow-cljs release libs && node scripts/strip-goog.js dist/libs/lib.core.js",
    "build:demo": "node scripts/build-demo.js",
    "build": "npm run build:debug",
    "watch:libs": "npx shadow-cljs watch libs",
    "serve:app": "npx shadow-cljs watch app",
    "serve:test": "npx shadow-cljs watch test",
    "serve:demo": "npx shadow-cljs watch demo",
    "serve": "npx shadow-cljs watch libs app test demo",
    "lint:clj-kondo": "clojure -M:dev:clj-kondo",
    "lint:eastwood": "clojure -M:dev:eastwood",
    "lint:splint": "clojure -M:dev:splint",
    "lint:kibit": "clojure -X:dev:kibit",
    "lint": "npm run lint:clj-kondo && npm run lint:eastwood && npm run lint:splint && npm run lint:kibit",
    "test:types": "tsd",
    "test:debug": "npx shadow-cljs compile karma-test-debug && KARMA_FILE=target/karma-test-debug.js npx karma start --single-run",
    "test:release": "npx shadow-cljs compile karma-test-release && KARMA_FILE=target/karma-test-release.js npx karma start --single-run",
    "test:demo": "node scripts/test-demo.js",
    "test": "npm run test:types && npm run test:debug && npm run test:release && MODE=release npm run build:demo && npm run test:demo"
  },
  "main": "dist/libs/lib.core.js",
  "module": "dist/libs/lib.core.js",
  "types": "types/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/libs/lib.core.js",
      "types": "./types/lib.d.ts"
    },
    "./extensions": {
      "import": "./dist/libs/ext.lang.rholang.js",
      "types": "./types/ext.d.ts"
    },
    "./tree-sitter": {
      "import": "./dist/libs/embedded.tree-sitter.js",
      "types": "./types/embedded.tree-sitter.d.ts"
    },
    "./extensions/lang/rholang/tree-sitter": {
      "import": "./dist/libs/embedded.rholang.js",
      "types": "./types/embedded.rholang.d.ts"
    },
    "./extensions/lang/rholang/tree-sitter/queries": {
      "import": "./dist/libs/embedded.rholang-queries.js",
      "types": "./types/embedded.rholang-queries.d.ts"
    }
  },
  "files": [
    "dist/**",
    "types/**",
    "resources/public/extensions/**",
    "scripts/utils.js",
    "scripts/postinstall.js"
  ]
}
